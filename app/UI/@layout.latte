<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{ifset title}{include title|stripHtml} | {/ifset}Users DB</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/main.css" />
    {block styles} {/block}
  </head>
  <body class="d-flex flex-column h-100 position-relative">
    <div class="position-absolute w-100">
      {foreach $flashes as $flash}
      <div class="alert mx-auto w-100 alert-{$flash->type} alert-dismissible fade show" role="alert">
        {$flash->message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {/foreach}
    </div>
    <div class="container h-100">{include content}</div>
    {block scripts}
    <script src="https://unpkg.com/nette-forms@3"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
    {/block}
  </body>
</html>
